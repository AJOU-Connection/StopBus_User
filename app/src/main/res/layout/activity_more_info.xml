<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_navigate_before_black_18dp" />
        <TextView
            android:id="@+id/routeNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="3007"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/search_layout">

        <TextView
            android:id="@+id/border1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#E0E0E0"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textSize="15sp"/>

        <RelativeLayout
            android:id="@+id/stationNameLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/stationNameIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_directions_bus_48pt"/>
            <TextView
                android:id="@+id/stationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/stationNameIcon"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"
                android:text="운행 지역" />
            <TextView
                android:id="@+id/startStationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stationName"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:text="수원버스터미널"/>

            <TextView
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/startStationName"
                android:layout_below="@+id/stationName"
                android:layout_marginTop="10dp"
                android:text="⇔"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/endStationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/divider"
                android:text="강남역,역삼세무서"
                android:layout_below="@+id/stationName"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/regionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/startStationName"
                android:text="경기"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:id="@+id/routeTypeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/startStationName"
                android:text="직행 버스"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/regionName"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timeLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/timeIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_access_time_36pt"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/timeIcon"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"
                android:text="운행 시간" />

            <TextView
                android:id="@+id/up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_marginLeft="30dp"
                android:text="상행선"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/up"
                android:layout_marginLeft="30dp"
                android:text="하행선"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/upFirstTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:text="05:20"
                android:layout_toRightOf="@+id/up"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/upLastTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:text="~23:20"
                android:layout_toRightOf="@+id/upFirstTime"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/downFirstTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upFirstTime"
                android:text="05:20"
                android:layout_toRightOf="@+id/up"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/downLastTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upFirstTime"
                android:text="~23:20"
                android:layout_toRightOf="@+id/downFirstTime"
                android:layout_marginTop="5dp"/>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>