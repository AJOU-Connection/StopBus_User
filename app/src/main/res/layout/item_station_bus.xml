<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favourite_list_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/bg_round_rect">

    <TextView
        android:id="@+id/bus_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3007"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textColor="#FF0000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/bus_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_num"
        android:text="시외버스"
        android:layout_marginLeft="20dp"
        android:textSize="10sp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/bus_time_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bus_num"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:text="4분"
        android:textSize="15sp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/bus_location1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bus_time_1"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="10dp"
        android:text="1번째 전"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/bus_time_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_time_1"
        android:layout_toRightOf="@+id/bus_num"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:text="14분"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/bus_location2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bus_time_2"
        android:layout_below="@+id/bus_time_1"
        android:text="2번째 전"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_star_black_36dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>