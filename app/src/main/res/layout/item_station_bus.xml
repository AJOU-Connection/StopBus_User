<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bus_list_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/bg_round_rect">

    <TextView
        android:id="@+id/routeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3007"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/routeTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/routeNumber"
        android:text="시외버스"
        android:layout_marginLeft="15dp"
        android:textSize="10sp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/predictTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="18dp"
        android:text="4분"
        android:textSize="15sp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/locationNo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/predictTime1"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="10dp"
        android:text="1번째 전"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/predictTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/predictTime1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="130dp"
        android:text="14분"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/locationNo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/predictTime2"
        android:layout_below="@+id/predictTime1"
        android:text="2번째 전"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/favourite_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_star_black_36dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/bell"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bell_gray"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>