<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/station_layout"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="1dp"
    android:background="@drawable/bg_round_rect">

<RelativeLayout
    android:id="@+id/bus_info_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:padding="5dp"
    android:background="@drawable/gray_border"
    android:layout_centerVertical="true"
    android:visibility="invisible"
    >
    <TextView
        android:id="@+id/plateNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234"
        />
    <TextView
        android:id="@+id/remainSeatCnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/plateNo"
        android:layout_marginLeft="5dp"
        android:textColor="#d96858"
        android:layout_centerHorizontal="true"
        android:text="15석"
        />

</RelativeLayout>

    <ImageView
        android:id="@+id/bus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/bus_info_layout"
        android:background="@drawable/ic_directions_bus_48pt"
        android:visibility="invisible"/>
    <!---
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/line"/>
      -->


    <TextView
        android:id="@+id/stationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부개역.상동차고지"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="140dp"
        />

    <TextView
        android:id="@+id/stationNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stationName"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="140dp"
        android:text="11502" />

</RelativeLayout>