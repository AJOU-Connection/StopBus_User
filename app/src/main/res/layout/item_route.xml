<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/station_layout"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="1dp"
    android:background="@drawable/bg_round_rect">

<RelativeLayout
    android:id="@+id/bus_info_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:padding="5dp"
    android:background="@drawable/gray_border"
    android:layout_centerVertical="true"
    android:visibility="invisible"
    >
    <TextView
        android:id="@+id/plateNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234"
        />
    <TextView
        android:id="@+id/remainSeatCnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/plateNo"
        android:layout_marginLeft="5dp"
        android:textColor="#d96858"
        android:layout_centerHorizontal="true"
        android:text="15석"
        />

</RelativeLayout>
<RelativeLayout
    android:id="@+id/bus_position_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="100dp">

    <ImageView
        android:id="@+id/line"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/line"/>

    <ImageView
        android:id="@+id/bus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/red_bus"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/pointer"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pointer"/>




</RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginLeft="20dp"
    android:layout_toRightOf="@+id/bus_position_layout">

    <TextView
        android:id="@+id/stationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부개역.상동차고지"
        android:textStyle="bold"
        android:layout_marginTop="15dp"

        />

    <TextView
        android:id="@+id/stationNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stationName"
        android:layout_marginBottom="15dp"

        android:text="11502" />

</RelativeLayout>


</RelativeLayout>